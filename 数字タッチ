<body>
  <h1>æ•°å­—ã‚¿ãƒƒãƒã‚²ãƒ¼ãƒ </h1>
  <div id="game"></div>
  <div id="message"></div>
  <div id="result"></div>

  <script>
    const numbers = Array.from({length: 10}, (_, i) => i + 1);
    const game = document.getElementById("game");
    const message = document.getElementById("message");
    const result = document.getElementById("result");
    let next = 1;
    let startTime = null;

    // éŸ³å£°
    const correctSound = new Audio("https://actions.google.com/sounds/v1/cartoon/wood_plank_flicks.ogg");
    const wrongSound = new Audio("https://actions.google.com/sounds/v1/cartoon/clang_and_wobble.ogg");
    const clearSound = new Audio("https://actions.google.com/sounds/v1/alarms/digital_watch_alarm_long.ogg");

    // æ•°å­—ã‚’ãƒ©ãƒ³ãƒ€ãƒ ã«ä¸¦ã¹ã‚‹
    numbers.sort(() => Math.random() - 0.5);
    numbers.forEach(num => {
      const btn = document.createElement("div");
      btn.textContent = num;
      btn.className = "number";
      btn.addEventListener("click", () => handleClick(btn, num));
      game.appendChild(btn);
    });

    function handleClick(btn, num) {
      if (num === 1 && next === 1) {
        // æœ€åˆã®ã‚¿ãƒƒãƒã§æ™‚é–“ã‚’ã‚¹ã‚¿ãƒ¼ãƒˆ
        startTime = new Date();
      }

      if (num === next) {
        btn.classList.add("correct");
        correctSound.play();
        if (next === numbers.length) {
          message.textContent = "ã‚¯ãƒªã‚¢ï¼ğŸ‰";
          clearSound.play();

          // çµŒéæ™‚é–“ã‚’è¨ˆç®—
          const endTime = new Date();
          const elapsed = (endTime - startTime) / 1000; // ç§’
          
          // ãƒ©ãƒ³ã‚¯åˆ¤å®š
          let rank = "C";
          if (elapsed < 10) rank = "S";
          else if (elapsed < 15) rank = "A";
          else if (elapsed < 20) rank = "B";

          result.textContent = `ã‚¿ã‚¤ãƒ : ${elapsed.toFixed(2)} ç§’ã€€ãƒ©ãƒ³ã‚¯: ${rank}`;
        }
        next++;
      } else {
        btn.classList.add("wrong");
        wrongSound.play();
        setTimeout(() => btn.classList.remove("wrong"), 500);
        message.textContent = "ã¡ãŒã†ã‚ˆï¼ğŸ˜…";
      }
    }
  </script>
